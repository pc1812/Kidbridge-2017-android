<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/mFragment"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_above="@+id/li_bottom"
        android:background="#dedede" />

    <LinearLayout
        android:id="@+id/li_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y97"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/li_home"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/y6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="@dimen/x29"
                android:layout_height="@dimen/y36"
                android:scaleType="fitXY"
                android:src="@drawable/iv_main_home_gray" />

            <TextView
                android:id="@+id/tv_hb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y6"
                android:text="绘本馆"
                android:textColor="#1b1b1b"
                android:textSize="@dimen/x26" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_lesson"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/y6"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_lesson"
                android:layout_width="@dimen/x39"
                android:layout_height="@dimen/y36"
                android:scaleType="fitXY"
                android:src="@drawable/iv_main_lesson_gray" />

            <TextView
                android:id="@+id/tv_less"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y6"
                android:text="课程馆"
                android:textColor="#1b1b1b"
                android:textSize="@dimen/x26" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/li_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="@dimen/y6"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y36">

                <ImageView
                    android:id="@+id/iv_mine"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/y36"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/iv_main_mine_gray" />

                <ImageView
                    android:id="@+id/iv_red"
                    android:layout_width="@dimen/x12"
                    android:layout_height="@dimen/x12"
                    android:src="@drawable/iv_red_point"
                    android:layout_toRightOf="@id/iv_mine" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y6"
                android:text="我的"
                android:textColor="#1b1b1b"
                android:textSize="@dimen/x26" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
