<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    android:orientation="vertical"
    tools:context="education.zhiyuan.com.picturebooks.activity.EditAddressActivity">

    <include layout="@layout/bar_left_title_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/y20"
        android:paddingLeft="@dimen/x20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:text="收件人"
            android:textColor="#191919"
            android:textSize="@dimen/x30" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:background="@null"
            android:hint="请填写收货人姓名"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/textGray"
            android:textColorHint="@color/textGray"
            android:textSize="@dimen/x32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:text="联系方式"
            android:textColor="#191919"
            android:textSize="@dimen/x30" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:background="@null"
            android:hint="请填写联系方式"
            android:maxLines="1"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/textGray"
            android:textColorHint="@color/textGray"
            android:textSize="@dimen/x32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:text="区域地址"
            android:textColor="#191919"
            android:textSize="@dimen/x30" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:background="@null"
            android:maxLines="1"
            android:text="请填写联系方式"
            android:textColor="@color/textGray"
            android:textColorHint="@color/textGray"
            android:textSize="@dimen/x32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:text="详细地址"
            android:textColor="#191919"
            android:textSize="@dimen/x30" />

        <EditText
            android:id="@+id/et_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:background="@null"
            android:hint="请填写详细地址"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/textGray"
            android:textColorHint="@color/textGray"
            android:textSize="@dimen/x32" />
    </LinearLayout>

</LinearLayout>
