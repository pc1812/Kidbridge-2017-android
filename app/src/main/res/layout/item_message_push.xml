<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="@color/graywhite"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/y52"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/y10"
        android:background="@drawable/bg_shape_msg"
        android:gravity="center"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20"
        android:text="2017-07-07\t09:11"
        android:textColor="@color/white"
        android:textSize="@dimen/x24" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y36"
        android:layout_marginLeft="@dimen/x22"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="@dimen/x96"
            android:layout_height="@dimen/x96"
            android:src="@mipmap/iv_login_logo" />

        <ImageView
            android:id="@+id/redPoint"
            android:layout_width="@dimen/x12"
            android:layout_height="@dimen/x12"
            android:layout_marginLeft="@dimen/x100"
            android:layout_marginTop="@dimen/y8"
            android:src="@drawable/iv_red_point"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="@dimen/x480"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x122"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/tv_shape_light"
            android:lineSpacingExtra="@dimen/x10"
            android:padding="@dimen/x27"
            android:text="您刚解锁了新的绘本《三毛》~"
            android:textSize="@dimen/x26" />
    </RelativeLayout>
</LinearLayout>