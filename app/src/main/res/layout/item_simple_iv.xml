<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y246">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_marginLeft="@dimen/x4"
            android:layout_marginRight="@dimen/x4"
            android:layout_width="@dimen/x170"
            android:layout_height="@dimen/y246"
            app:cardBackgroundColor="@color/graywhite"
            app:cardCornerRadius="@dimen/x8">

            <ImageView
                android:id="@+id/iv_lesson"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/iv_mine_bg"
                android:scaleType="fitXY"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>