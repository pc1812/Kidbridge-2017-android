<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/x8"
        app:cardElevation="@dimen/x7"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="@dimen/x698"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_today_left"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x388"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_charge"
                android:layout_width="@dimen/x62"
                android:layout_height="@dimen/y65"
                android:src="@drawable/iv_lock"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_today_left"
                android:layout_marginBottom="@dimen/y14"
                android:layout_marginTop="@dimen/y12"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/y10"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/x13"
                    android:paddingRight="@dimen/x13">

                    <TextView
                        android:id="@+id/tv_lessonName"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxEms="6"
                        android:maxLines="1"
                        android:paddingRight="@dimen/x10"
                        android:singleLine="true"
                        android:text="橡树山的奇迹"
                        android:textColor="@color/textBlack"
                        android:textSize="@dimen/x28" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_fit"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="3-5岁"
                            android:textColor="@color/greendeep"
                            android:textSize="@dimen/x28" />

                        <TextView
                            android:id="@+id/tv_lessonFlag"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="5/7"
                            android:textColor="@color/greendeep"
                            android:textSize="@dimen/x28" />

                        <TextView
                            android:id="@+id/tv_cycle"
                            android:layout_width="0dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="right|center"
                            android:text="30天"
                            android:textColor="@color/black"
                            android:textSize="@dimen/x28" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginRight="@dimen/x13"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/ll_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal" />

                    <TextView
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/x6"
                        android:gravity="right"
                        android:text="¥10"
                        android:textColor="#f00"
                        android:textSize="@dimen/x28" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
