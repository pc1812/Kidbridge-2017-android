<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <include layout="@layout/bar_left_title_right" />

    <education.zhiyuan.com.picturebooks.view.commodity.MScrollview
        android:id="@+id/myScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <education.zhiyuan.com.picturebooks.view.commodity.custom.CarouselBanner
                    android:id="@+id/lanceBanner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x562"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    app:pointMarginBottom="@dimen/x16"
                    app:pointMarginLeft="@dimen/x10"
                    app:pointPosition="CENTER"
                    app:points_container_background="#00000000"
                    app:showPoint="true" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_ls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x23"
                android:layout_marginRight="@dimen/x22"
                android:layout_marginTop="@dimen/y30"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x6"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x22"
                    android:background="@color/colorAccent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="蓝思指数"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x32" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_ls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y20"
                android:ellipsize="end"
                android:lineSpacingExtra="2sp"
                android:maxLines="3"
                android:text="sssssss"
                android:textColor="#333"
                android:textSize="@dimen/x28" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x23"
                android:layout_marginRight="@dimen/x22"
                android:layout_marginTop="@dimen/y30"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x6"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x22"
                    android:background="@color/colorAccent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="故事梗慨"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x32" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_story"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y25"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y20"
                android:ellipsize="end"
                android:text="sssssssss"
                android:lineSpacingExtra="2sp"
                android:maxLines="3"
                android:textColor="#333"
                android:textSize="@dimen/x28" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x23"
                android:layout_marginRight="@dimen/x22"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x6"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x22"
                    android:background="@color/colorAccent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="绘本感悟"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x32" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_felling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y25"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y20"
                android:ellipsize="end"
                android:lineSpacingExtra="2sp"
                android:maxLines="3"
                android:textColor="#333"
                android:textSize="@dimen/x28" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x23"
                android:layout_marginRight="@dimen/x22"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x6"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x22"
                    android:background="@color/colorAccent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="适龄"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x32" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y25"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y20"
                android:ellipsize="end"
                android:lineSpacingExtra="2sp"
                android:maxLines="3"
                android:textColor="#333"
                android:textSize="@dimen/x28" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x23"
                android:layout_marginRight="@dimen/x22"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/x6"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x22"
                    android:background="@color/colorAccent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="关键词"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x32" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_keyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y25"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginTop="@dimen/y20"
                android:ellipsize="end"
                android:lineSpacingExtra="2sp"
                android:maxLines="3"
                android:textColor="#333"
                android:textSize="@dimen/x28" />

            <LinearLayout
                android:id="@+id/ll_free"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y16"
                    android:layout_marginBottom="@dimen/y14"
                    android:background="#f0f0ef" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x4"
                    android:layout_marginLeft="@dimen/x23"
                    android:layout_marginRight="@dimen/x22"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/x6"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/x22"
                        android:background="@color/colorAccent" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="跟读榜"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x32" />

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/mRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="@dimen/y40"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </education.zhiyuan.com.picturebooks.view.commodity.MScrollview>

    <RelativeLayout
        android:id="@+id/re_bom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y88"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_nlock"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="1元解锁"
            android:textColor="@color/white"
            android:textSize="@dimen/x32"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_Read"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:text="免费跟读"
                android:textColor="@color/white"
                android:textSize="@dimen/x32"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_Appreciation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/pink"
                android:gravity="center"
                android:text="赏析区"
                android:textColor="@color/white"
                android:textSize="@dimen/x32"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
