<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="education.zhiyuan.com.picturebooks.activity.StartLessonDetailActivity">

    <include layout="@layout/bar_left_title_right"/>

    <education.zhiyuan.com.picturebooks.view.commodity.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/lesson_Recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10"
                android:orientation="horizontal">
                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x6"
                    android:background="@color/colorAccent" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="课程进度"
                    android:textSize="@dimen/x14"
                    android:textColor="#000" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/data_Recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x10"
                android:orientation="horizontal">
                <View
                    android:layout_width="@dimen/x3"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/x6"
                    android:background="@color/colorAccent" />
                <TextView
                    android:id="@+id/tv_read"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="跟读榜"
                    android:textSize="@dimen/x14"
                    android:textColor="@color/colorAccent" />
                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论区"
                    android:textColor="#000"
                    android:textSize="@dimen/x14"
                    android:layout_marginLeft="@dimen/x20"/>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/last_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y30"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_toComment"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="去评价"
                    android:textSize="@dimen/x16"
                    android:textColor="@color/white"
                    android:background="@color/green"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/tv_toDaka"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="去打卡"
                    android:textSize="@dimen/x16"
                    android:textColor="@color/white"
                    android:background="@color/pink"
                    android:gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>
    </education.zhiyuan.com.picturebooks.view.commodity.MyScrollView>

</LinearLayout>
