<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y90"
    android:background="#15CF30"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/ivBarLeft"
        android:layout_width="@dimen/x65"
        android:layout_height="@dimen/y65"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x10"
        android:padding="@dimen/x15"
        android:src="@drawable/iv_search" />

    <TextView
        android:id="@+id/tvSearch"
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/y66"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x20"
        android:background="@drawable/bg_shape_white"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/x50"
        android:text="请输入绘本名称"
        android:textColor="@color/textGray"
        android:textSize="@dimen/x28" />

</LinearLayout>
