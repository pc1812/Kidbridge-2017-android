<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/li_books"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/today_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/x7"
        app:cardElevation="@dimen/x8"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="@dimen/x334"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_today_left"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x250"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_charge"
                android:layout_width="@dimen/x62"
                android:layout_height="@dimen/x65"
                android:scaleType="fitXY"
                android:src="@drawable/iv_lock" />

            <TextView
                android:id="@+id/tv_today_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_today_left"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginTop="@dimen/y12"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="8"
                android:maxLines="1"
                android:singleLine="true"
                android:text="My Family"
                android:textColor="@color/black"
                android:textSize="@dimen/x28" />

            <TextView
                android:id="@+id/tv_today_type_left"
                style="@style/Padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_today_left"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/bg_rectangular_green"
                android:text="家庭"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:visibility="gone" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_today_left"
                android:layout_marginBottom="@dimen/y14"
                android:gravity="center">

                <LinearLayout
                    android:id="@+id/ll_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y46"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" />

                <TextView
                    android:id="@+id/tv_today_mid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="3-5岁"
                    android:textColor="@color/greendeep"
                    android:textSize="@dimen/x26" />

                <TextView
                    android:id="@+id/tv_today_left_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:paddingRight="@dimen/x13"
                    android:text="免费"
                    android:textColor="@color/greendeep"
                    android:textSize="@dimen/x26" />
            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
