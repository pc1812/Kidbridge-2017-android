<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/y4"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_mine"
        android:layout_width="@dimen/x50"
        android:layout_height="@dimen/y40"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/x10"
        android:src="@mipmap/iv_login_logo" />

    <TextView
        android:id="@+id/tv_myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginTop="@dimen/y2"
        android:layout_toRightOf="@id/iv_mine"
        android:gravity="center"
        android:text="Jenne"
        android:textSize="@dimen/x16"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/y20"
        android:layout_below="@id/tv_myname"
        android:layout_toRightOf="@id/iv_mine"
        android:background="@drawable/bg_rectangular_shape_green"
        android:gravity="center"
        android:textSize="@dimen/x14"
        android:text="音频草稿                       4'18''"
        android:textColor="@color/white" />

    <ImageView
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/y20"
        android:layout_alignBottom="@id/tv_time"
        android:layout_marginLeft="@dimen/x20"
        android:layout_toRightOf="@id/tv_time"
        android:src="@drawable/iv_to_read_play" />

    <LinearLayout
        android:id="@+id/ll_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_myname"
        android:layout_below="@id/tv_time"
        android:orientation="vertical"></LinearLayout>
</RelativeLayout>