<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="education.zhiyuan.com.picturebooks.activity.ForgetPwdActivity">

    <include layout="@layout/bar_left_title_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:entries="@array/mobilearea"></Spinner>

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y30"
            android:background="@color/white"
            android:hint="请输入手机号"
            android:paddingLeft="@dimen/x10"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textSize="16sp" />
    </LinearLayout>

    <view
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:background="@color/graywhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_code"
            android:layout_width="0dp"
            android:layout_height="@dimen/y30"
            android:layout_weight="5"
            android:background="@null"
            android:hint="请输入验证码"
            android:paddingLeft="@dimen/x10"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/x6"
            android:layout_weight="2"
            android:background="@drawable/bg_rectangular_shape_green"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="@dimen/x14" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="@dimen/x260"
        android:layout_height="@dimen/y30"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x100"
        android:background="@drawable/bg_rectangular_shape_green"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="@dimen/x15" />

</LinearLayout>
