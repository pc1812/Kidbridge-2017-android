<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x458"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shape_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="@dimen/x338"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/x6"
            android:paddingBottom="@dimen/x24"
            android:paddingTop="@dimen/x24"
            android:text="内容内容内容内容内容内容内容内容 "
            android:textColor="@color/black"
            android:textSize="@dimen/x30" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y2"
            android:background="@color/graywhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/x30"
                android:paddingTop="@dimen/x30"
                android:text="确定提示"
                android:textColor="@color/green"
                android:textSize="@dimen/x30" />

            <View
                android:layout_width="@dimen/y2"
                android:layout_height="match_parent"
                android:background="@color/graywhite" />

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/x30"
                android:paddingTop="@dimen/x30"
                android:text="退出提示"
                android:textColor="@color/black"
                android:textSize="@dimen/x30" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>