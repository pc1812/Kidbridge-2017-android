<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/y20"
    android:orientation="horizontal">

    <RelativeLayout
        android:paddingLeft="@dimen/x20"
        android:id="@+id/re_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/x94"
            android:layout_height="@dimen/x94"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y40"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@id/iv_pic"
            android:ellipsize="end"
            android:gravity="center_vertical|left"
            android:maxEms="7"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="萌小妞萌小妞萌小妞萌小妞"
            android:textColor="@color/black"
            android:textSize="@dimen/x30" />

        <TextView
            android:id="@+id/clock_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20"
            android:gravity="center"
            android:text="已打卡"
            android:textColor="@color/greendeep"
            android:textSize="@dimen/x30" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x100"
            android:layout_toLeftOf="@id/clock_state"
            android:gravity="center"
            android:text="10:00:03"
            android:layout_centerVertical="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/x28" />
    </RelativeLayout>

</RelativeLayout>