<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/viewLeft"
            android:layout_width="@dimen/y14"
            android:layout_height="@dimen/y600"
            android:visibility="gone" />

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="@dimen/y600"
            android:layout_margin="@dimen/y8"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/x10"
            app:cardElevation="@dimen/y6"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginTop="@dimen/y20"
                    android:text="1/5"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x30" />

                <education.zhiyuan.com.picturebooks.view.commodity.MyScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fadeScrollbars="false"
                    android:fillViewport="true"
                    android:paddingLeft="@dimen/x30"
                    android:paddingRight="@dimen/x30"
                    android:scrollbarThumbVertical="@drawable/bg_scrollbar_thumb"
                    android:scrollbarTrackVertical="@drawable/bg_scrollbar_track"
                    android:scrollbars="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_en_content"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/y20"
                            android:lineSpacingExtra="@dimen/x10"
                            android:paddingBottom="@dimen/x10"

                            android:paddingRight="@dimen/x20"
                            android:textColor="#191919"
                            android:textSize="@dimen/x28" />

                    </LinearLayout>

                </education.zhiyuan.com.picturebooks.view.commodity.MyScrollView>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x2"
                    android:layout_above="@+id/li_bottom"
                    android:layout_marginBottom="@dimen/x5"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    android:background="#efefef" />

                <LinearLayout
                    android:id="@+id/li_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y20"
                    android:layout_marginTop="@dimen/y20"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_play"
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/x80"
                        android:layout_marginRight="@dimen/x50"
                        android:clickable="true"
                        android:src="@drawable/iv_to_read_play" />

                    <ImageView
                        android:id="@+id/iv_record"
                        android:layout_width="@dimen/x80"
                        android:layout_height="@dimen/x80"
                        android:layout_marginLeft="@dimen/x8"
                        android:clickable="true"
                        android:src="@drawable/iv_recording" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <View
            android:id="@+id/viewRight"
            android:layout_width="@dimen/y14"
            android:layout_height="@dimen/y600"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>

