<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x458"
        android:layout_height="@dimen/y286"
        android:background="@drawable/bg_shape_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            android:gravity="center"
            android:text="请输入打赏金额"
            android:textColor="#000000"
            android:textSize="@dimen/x30" />

        <EditText
            android:id="@+id/et_reward"
            android:layout_width="@dimen/x370"
            android:layout_height="@dimen/y70"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y38"
            android:background="@drawable/bg_shape_grary"
            android:hint="请输入整数数字"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            android:singleLine="true"
            android:gravity="center"
            android:textColor="@color/textBlack"
            android:textColorHint="#bfbebe"
            android:textSize="@dimen/x26" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y99"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/greendeep"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="#333"
                android:textSize="@dimen/x30" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>