<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x458"
    android:layout_height="@dimen/y286"
    android:background="@drawable/bg_shape_dialog"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y30"
        android:text="签名"
        android:textColor="@color/black"
        android:textSize="@dimen/x32" />

    <EditText
        android:id="@+id/et_sign"
        android:layout_width="@dimen/x370"
        android:layout_height="@dimen/x80"
        android:layout_below="@id/tv"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/y30"
        android:layout_marginTop="@dimen/y30"
        android:background="@drawable/bg_shape_grary"
        android:gravity="center"
        android:hint="请输入签名"
        android:singleLine="true"
        android:textSize="@dimen/x30"
        android:theme="@style/MyEditText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/x32" />

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/x32" />

    </LinearLayout>

</LinearLayout>