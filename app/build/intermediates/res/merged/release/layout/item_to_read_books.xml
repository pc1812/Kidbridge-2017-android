<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:id="@+id/today_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/x7"
        app:cardElevation="@dimen/x8"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="@dimen/x334"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x250"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/iv_charge"
                android:layout_width="@dimen/x62"
                android:layout_height="@dimen/x65"
                android:scaleType="fitXY"
                android:src="@drawable/iv_lock" />

            <LinearLayout
                android:id="@+id/ll_cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:paddingBottom="@dimen/y20"
                android:paddingLeft="@dimen/x20">

                <CheckBox
                    android:id="@+id/cb_select"
                    android:layout_width="@dimen/x78"
                    android:layout_height="@dimen/x58"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/cb_select"
                    android:button="@null" />

            </LinearLayout>

            <!--<CheckBox-->
            <!--android:id="@+id/cb_select"-->
            <!--android:layout_width="@dimen/x42"-->
            <!--android:layout_height="@dimen/x42"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_margin="@dimen/x12"-->
            <!--android:background="@drawable/cb_select"-->
            <!--android:button="@null"-->
            <!--android:visibility="invisible"-->
            <!--/>-->

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_image"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y10"
                android:layout_marginTop="@dimen/y12"
                android:ellipsize="end"
                android:gravity="center"
                android:maxEms="8"
                android:maxLines="1"
                android:singleLine="true"
                android:text="My Family"
                android:textColor="@color/black"
                android:textSize="@dimen/x28" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y46"
                android:layout_below="@id/tv_title"
                android:layout_marginBottom="@dimen/y14"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_left"
                    style="@style/Padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x13"
                    android:layout_marginRight="@dimen/x10"
                    android:layout_marginTop="@dimen/y2"
                    android:background="@drawable/bg_rectangular_green"
                    android:text="家庭"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x24" />

                <TextView
                    android:id="@+id/tv_cen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:text="免费"
                    android:textColor="@color/greendeep"
                    android:textSize="@dimen/x26" />

                <TextView
                    android:id="@+id/tv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/x13"
                    android:text="3-5岁"
                    android:textColor="@color/greendeep"
                    android:textSize="@dimen/x26" />

            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
