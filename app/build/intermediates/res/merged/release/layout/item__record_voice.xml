<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/x8"
    android:layout_marginRight="@dimen/x10">

    <RelativeLayout
        android:id="@+id/voice_layout"
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/y60"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_rectangular_shape_green"
        android:paddingBottom="@dimen/x4"
        android:paddingLeft="@dimen/x14"
        android:paddingRight="@dimen/x14"
        android:paddingTop="@dimen/x4">

        <TextView
            android:id="@+id/chat_tv_voice_len"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:textColor="@color/white"
            android:textSize="@dimen/x30" />

        <ImageView
            android:id="@+id/iv_voice_image"
            android:layout_width="@dimen/x54"
            android:layout_height="@dimen/y38"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:paddingLeft="@dimen/x20" />

    </RelativeLayout>
</LinearLayout>
